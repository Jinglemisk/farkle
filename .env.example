# Frontend environment variables (for Vite)
# Set this to your production server URL when deploying
VITE_SERVER_URL=http://localhost:3001

# Backend environment variables (for server.js)
# Port for the backend server
PORT=3001

# Comma-separated list of allowed CORS origins
# For production, set this to your frontend domain(s)
ALLOWED_ORIGINS=http://localhost:5173,http://localhost:3002,http://localhost:3000

# Example production settings:
# VITE_SERVER_URL=https://your-server-domain.com
# PORT=3001
# ALLOWED_ORIGINS=https://your-frontend-domain.com,https://www.your-frontend-domain.com